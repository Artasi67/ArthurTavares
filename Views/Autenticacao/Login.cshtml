@{
    ViewData["Title"] = "Login - Gerenciamento de Filmes";
}

<div class="container mt-4">
    <div class="jumbotron bg-light p-4 mb-4 rounded shadow-sm">
        <h1 class="display-5">Login</h1>
        <p class="lead">Informe seu e-mail e senha para acessar o sistema.</p>
        <hr class="my-4" />

        <form asp-action="Login" method="post" class="needs-validation">
            <div class="mb-3">
                <label for="email" class="form-label">E-mail:</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label">Senha:</label>
                <input type="password" class="form-control" id="senha" name="senha" required />
            </div>

            @if (ViewBag.Mensagem != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Mensagem
                </div>
            }

            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
            </button>
        </form>
    </div>
</div>


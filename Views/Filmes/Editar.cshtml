@model ArthurTavares.Models.Filme

@{
    ViewData["Title"] = "Editar Filme";
}

<h2>Editar Produto</h2>

<form asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="Id_filme" />

    <div class="form-group">
        <label for="Titulo_filme">Título</label>
        <input asp-for="Titulo_filme" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Descricao_filme">Descrição</label>
        <textarea asp-for="Descricao_filme" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="Lancamento_filme">Lançamento</label>
        <input asp-for="Lancamento_filme" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Atualizar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
